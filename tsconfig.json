{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "target": "ES2020",
    "preserveWatchOutput": true
  },
  "ts-node": {
    "esm": true,
    "swc": true
  }
}
